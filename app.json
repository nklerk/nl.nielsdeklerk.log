  "flow": {
    "actions": [
      {
        "id": "Input_log",
        "title": {
          "en": "Add Something to the log",
          "nl": "Voeg iets toe aan de log"
        },
        "args": [
          {
            "name": "log",
            "type": "text",
            "placeholder": {
              "en": "Data to log...",
              "nl": "Gegevens voor logboek..."
            }
          }
        ]
      },
      {
        "id": "Input_logtimeline",
        "title": {
          "en": "Add Something to the timeline and log",
          "nl": "Voeg iets toe aan de tijdslijn en log"
        },
        "args": [
          {
            "name": "log",
            "type": "text",
            "placeholder": {
              "en": "Data to log...",
              "nl": "Gegevens voor logboek..."
            }
          }
        ]
      },
      {
        "id": "Input_timeline",
        "title": {
          "en": "Add Something to the timeline",
          "nl": "Voeg iets toe aan de tijdslijn"
        },
        "args": [
          {
            "name": "log",
            "type": "text",
            "placeholder": {
              "en": "Data to log...",
              "nl": "Gegevens voor logboek..."
            }
          }
        ]
      },
      {
        "id": "Input_group_log",
        "title": {
          "en": "Add Something to a log group",
          "nl": "Voeg iets toe aan een log groep"
        },
        "args": [
          {
            "name": "group",
            "type": "text",
            "placeholder": {
              "en": "Group name...",
              "nl": "Groepsnaam..."
            }
          },
          {
            "name": "log",
            "type": "text",
            "placeholder": {
              "en": "Data to log...",
              "nl": "Gegevens voor logboek..."
            }
          }
        ]
      },
      {
        "id": "Input_group_logtimeline",
        "title": {
          "en": "Add Something to the timeline and a log group",
          "nl": "Voeg iets toe aan de tijdslijn en een log groep"
        },
        "args": [
          {
            "name": "group",
            "type": "text",
            "placeholder": {
              "en": "Group name...",
              "nl": "Groepsnaam..."
            }
          },
          {
            "name": "log",
            "type": "text",
            "placeholder": {
              "en": "Data to log...",
              "nl": "Gegevens voor logboek..."
            }
          }
        ]
      },
      {
        "id": "Clear_log",
        "title": {
          "en": "Clear log data",
          "nl": "Verwijder log data"
        }
      },
      {
        "id": "Clear_log_Older",
        "title": {
          "en": "Clear log data older then (Dagen)",
          "nl": "Verwijder log data ouder dan (Dagen)"
        },
        "args": [
          {
            "name": "days",
            "type": "number"
          }
        ]
      }
    ]
  }
}